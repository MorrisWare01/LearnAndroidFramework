<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnandroidframework">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.learnandroidframework.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityTestActivity" />

        <activity
            android:name="com.example.learnandroidframework.process.second.SecondActivity"
            android:process=":second" />
        <activity
            android:name="com.example.learnandroidframework.process.main.activity.NewTaskActivity"
            android:taskAffinity=":newTask" />
        <activity
            android:name="com.example.learnandroidframework.process.main.activity.SingleInstanceActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.learnandroidframework.process.main.activity.SingleInstance1Activity"
            android:launchMode="singleInstance" />

        <service android:name="com.example.learnandroidframework.process.main.service.MainService" />
        <receiver android:name="com.example.learnandroidframework.process.main.receiver.MainBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.receiver" />
            </intent-filter>
        </receiver>
        <provider
            android:name="com.example.learnandroidframework.process.main.provider.MainContentProvider"
            android:authorities="com.example.provider" />
    </application>

</manifest>