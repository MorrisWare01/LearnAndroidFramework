<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnandroidframework">

    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.learnandroidframework.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityTestActivity" />

        <activity
            android:name="com.example.learnandroidframework.process.second.SecondActivity"
            android:process=":second" />
        <activity
            android:name="com.example.learnandroidframework.process.main.activity.NewTaskActivity"
            android:taskAffinity=":newTask" />
        <activity
            android:name="com.example.learnandroidframework.process.main.activity.SingleInstanceActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.learnandroidframework.process.main.activity.SingleInstance1Activity"
            android:launchMode="singleInstance" />
        <activity android:name=".view.ViewActivity" />
        <activity android:name=".process.main.activity.SaveInstanceTestActivity" />
        <activity android:name=".TestSplashActivity" />
        <activity android:name=".fragment.FragmentTestActivity" />
        <activity android:name=".fragment.NavigationTestActivity" />
        <activity android:name=".provider.ProviderTestActivity" />

        <service android:name="com.example.learnandroidframework.process.main.service.MainService" />
        <receiver android:name="com.example.learnandroidframework.process.main.receiver.MainBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.receiver" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".provider.MainContentProvider"
            android:authorities="com.example.provider" />
        <provider
            android:name=".provider.MoreContentProvider"
            android:authorities="com.example.provider1;com.example.provider2;com.example.provider3" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>