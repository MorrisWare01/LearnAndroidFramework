<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.android.view.lifecycle.TestViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="group0">

        <com.example.android.view.lifecycle.TestView
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:tag="group0_view0" />

        <com.example.android.view.lifecycle.TestView
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:tag="group0_view1" />

        <com.example.android.view.lifecycle.TestViewGroup
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:tag="group1">

            <com.example.android.view.lifecycle.TestView
                android:id="@+id/group1_view0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="group1_view0" />

            <com.example.android.view.lifecycle.TestView
                android:id="@+id/group1_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="group1_view1" />

        </com.example.android.view.lifecycle.TestViewGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="invalid" />

        </LinearLayout>

    </com.example.android.view.lifecycle.TestViewGroup>

</ScrollView>