<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/startLaunchTestActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="launchMode/Intent.Flag" />

        <Button
            android:id="@+id/startActivityResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startActivityResult" />

        <Button
            android:id="@+id/startPickerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startPickerActivity" />

        <Button
            android:id="@+id/startFullscreenActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startFullscreenActivity" />

        <Button
            android:id="@+id/startTaskOnHomeActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startTaskOnHomeActivity" />

        <Button
            android:id="@+id/enterPipMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enterPipMode" />

        <Button
            android:id="@+id/enterMultiWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enterMultiWindow" />

    </LinearLayout>
</ScrollView>