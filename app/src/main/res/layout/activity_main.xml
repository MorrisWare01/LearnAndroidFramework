<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/startActivityTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startActivityTest" />

        <Button
            android:id="@+id/serviceTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="serviceTest" />

        <Button
            android:id="@+id/broadcastTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="broadcastTest" />

        <Button
            android:id="@+id/providerTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="providerTest" />

        <Button
            android:id="@+id/showToastWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="showToastWindow" />

        <Button
            android:id="@+id/showDialogWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="showDialogWindow" />

        <Button
            android:id="@+id/startViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startViewActivity" />

        <Button
            android:id="@+id/startFragmentTestActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startFragmentTestActivity" />

        <Button
            android:id="@+id/startNavigationTestActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startNavigationTestActivity" />

    </LinearLayout>
</ScrollView>